<%= form_tag(root_path, method: "get", class: "search-form") do %>
  <div class="bar">
    <div class="location">
      <p>Location</p>
      <%= text_field_tag "location", params[:location], placeholder: "Where are you going?", class: "form-control" %>
    </div>
    <div class="check-in">
      <p>Check in</p>
      <%= text_field_tag "check_in", params[:check_in], placeholder: "Add dates", class: "form-control", data: { controller: "datepicker" } %>
    </div>
    <div class="check-out">
      <p>Check out</p>
      <%= text_field_tag "check_out", params[:check_out], placeholder: "Add dates", class: "form-control", data: { controller: "datepicker" } %>
    </div>
    <div class="guests">
      <p>Guests</p>
      <%= select_tag "Seats", options_for_select(1..5), prompt: "Select seats", class: "form-control" %>
      <span><i class="lni lni-search-alt"></i></span>
    </div>
  </div>

<% end %>
