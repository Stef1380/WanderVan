<div class="container">
  <h2>Welcome to your dashboard, Test</h2>
</div>
<div class="row">
  <div class="dashboard">
    <div class="d-flex">
      <div class="bookings" style="width: 50%;">
        <div class="col-md-8">
          <h3>Your next booking</h3>
          <% @bookings.each do |booking| %>
            <div class="row">
              <div class="col-md-6">
                <div class="card mb-3">
                  <div class="card-body">
                    <h5 class="card-title">Van Photo</h5>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card mb-3">
                  <div class="card-body">
                    <h5 class="card-title">Calendar</h5>
                  </div>
                </div>
              </div>
            </div>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title">Van: <%= booking.van.brand %></h5>
                <p>Categorie: <%= booking.van.categorie %></p>
                <p>Starting Date: <%= booking.start_date %></p>
                <p>Ending Date: <%= booking.end_date %></p>
                <p>Total Price: <%= booking.total_price %>â‚¬</p>
                <p>Statut: <%= booking.statut %></p>
                <% if booking.statut == 'en attente' && booking.van.user == current_user %>
                  <%= link_to 'Accepter', van_booking_path(booking.van), method: :patch, class: 'btn btn-success' %>
                  <%= link_to 'Refuser', refuser_van_booking_path(booking.van, booking), method: :patch, class: 'btn btn-danger' %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="vans" style="width: 50%;">
        <h2>Your vans</h2>
        <div>
          <% @vans.each do |van| %>
            <div class="van">
              <p><%= van.brand %></p>
              <div class="icons">
                <div class="edit">
                  <%= link_to edit_van_path(van) do %>
                    <span class="material-symbols-outlined">edit</span>
                  <% end %>
                </div>
                <div class="delete">
                  <%= link_to van_path(van), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                    <span class="material-symbols-outlined">delete</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="links">
          <div id="button_create">
            <%= link_to "Create Van", new_van_path %>
          </div>
          <div id="redirect_home">
            <%= link_to "Home", root_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
