<div class= "body">
    <div class="container">
        <h1>Welcome to your dashboard, <%= @user.first_name %></h1>
    </div>

    <div class="dashboard">
        <div class="bookings">
            <h2>Your next booking</h2>
            <% @bookings.each do |booking| %>
              <div class="booking">
                <p>Van: <%= booking.van.brand %></p>
                <p>Date de d√©but: <%= booking.start_date %></p>
                <p>Date de fin: <%= booking.end_date %></p>
                <p>Prix total: <%= booking.total_price %></p>
              </div>
            <% end %>
        </div>

        <div class="vans">
            <h2>Your vans</h2>
            <% @vans.each do |van| %>
              <div class="van">
                <p><%= link_to van.brand, edit_van_path(van) %></p>
                 <div class= "delete">
            <span class="material-symbols-outlined">delete</span>
            </div>
              </div>
            <% end %>
        </div>


    </div>

    <div class="links">
        <div id= "button_create"><%= link_to "Create Van", new_van_path %>
