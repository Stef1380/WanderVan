<div class="card d-inline-flex p-2" data-controller="total-price">
  <%= simple_form_for [@van, @booking] do |f| %>
    <%= f.input :start_date, as: :string,
      required: false,
      input_html: { data: { controller: "datepicker", disabled_dates: @bookings, action: "change->total-price#connect", total_price_target: "start_date" } } %>

    <%= f.input :end_date, as: :string,
      required: false,
      input_html: { data: { controller: "datepicker", disabled_dates: @bookings, action: "change->total-price#connect", total_price_target: "end_date" } } %>

    <%= f.button :submit, "Valider", class: "btn btn-primary" %>
  <% end %>
  <div id="total_price" data-total-price-target="total_price" price="<%= @van.price%>">

  </div>
